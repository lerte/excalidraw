{
  "productName": "Excalidraw",
  "version": "../package.json",
  "identifier": "com.excalidraw.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Excalidraw",
        "height": 720,
        "width": 1280,
        "minWidth": 454
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "dmg", "nsis", "updater"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2024 Excalidraw",
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "sidebarImage": "assets/sidebar.bmp",
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English",
          "Russian",
          "Japanese",
          "Swedish",
          "Spanish",
          "Korean"
        ]
      }
    },
    "fileAssociations": [
      {
        "ext": ["excalidraw"]
      },
      {
        "ext": ["excalidrawlib"]
      }
    ]
  }
}
